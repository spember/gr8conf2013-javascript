<div class="large-12 columns" ng-show="albums.length">
   <p class="panel">We have the following albums: </p>
</div>
<div class="row" ng-repeat='album in albums'>
   <div class='large-6 columns'>
        <a href='#/album/detail/{{album.id}}'>{{album.name}}</a>
   </div>
</div>

<div class="large-12 columns"  ng-hide="albums.length">
    <p class="panel">No albums found</p>
</div>

